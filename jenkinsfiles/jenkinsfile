pipeline {
    agent {
        docker{
            image 'selenium/standalone-chrome'
        }
    }
    stages {
    stage('Stage 1') {
      steps {
         sh "sodo apt mvn install"
         sh "mvn test"
      }
    }
    stage('Reports') {
        steps {
           allure([
           includeProperties: false,
           jdk: '',
           properties: [],
           reportBuildPolicy: 'ALWAYS',
           results: [[path: 'target/allure-results']]
           ])
        }
    }
  }
}